{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "arrow-parens": [
      "error",
      "always"
    ],
    "comma-dangle": "off",
    "global-require": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      "error",
      120
    ],
    "no-underscore-dangle": "off",
    "react/jsx-filename-extension": "off",
    "react/no-unused-prop-types": [
      "error",
      {
        "skipShapeProps": true
      }
    ]
  },
  "settings": {
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src"
      ]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "webpackIsomorphicTools": true
  }
}
